# Application Settings
PROJECT_NAME="Intelligent LLM Router"
API_V1_STR="/api/v1"
DEBUG=true
ENVIRONMENT=development

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/llm_router
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=llm_router
DATABASE_USER=postgres
DATABASE_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# LLM API Keys (Required)
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
GOOGLE_API_KEY=your-google-ai-api-key-here

# Security
SECRET_KEY=your-super-secret-key-for-jwt-tokens-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Origins (Frontend URLs)
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:3001","https://yourdomain.com"]

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Monitoring & Analytics
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=90
LOG_LEVEL=INFO

# Model Configuration
DEFAULT_MAX_TOKENS=4000
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_COST=0.02
DEFAULT_MAX_LATENCY=5000

# Caching
ENABLE_REDIS_CACHING=true
CACHE_TTL_SECONDS=3600
CACHE_MODEL_METADATA=true